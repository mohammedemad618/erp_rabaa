{
  "name": "enterprise-travel-erp-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "npm run test:travel",
    "test:travel": "node --test --test-concurrency=1 --import tsx tests/travel-workflow.integration.test.ts tests/customers.integration.test.ts tests/crm-dataset.integration.test.ts tests/api-json-validation.test.ts tests/i18n-integrity.test.ts tests/auth-permissions.test.ts tests/security-coverage.test.ts",
    "pilot:smoke": "powershell -ExecutionPolicy Bypass -File scripts/pilot/smoke-check.ps1",
    "pilot:daily-report": "powershell -ExecutionPolicy Bypass -File scripts/pilot/daily-health-report.ps1",
    "pilot:usage-scenario": "powershell -ExecutionPolicy Bypass -File scripts/pilot/usage-scenario-check.ps1",
    "pilot:weekly-summary": "powershell -ExecutionPolicy Bypass -File scripts/pilot/weekly-executive-summary.ps1",
    "pilot:performance-gate": "powershell -ExecutionPolicy Bypass -File scripts/pilot/performance-gate.ps1",
    "pilot:security-gate": "powershell -ExecutionPolicy Bypass -File scripts/pilot/security-gate.ps1",
    "pilot:go-no-go": "powershell -ExecutionPolicy Bypass -File scripts/pilot/go-no-go-decision.ps1 -RunQualityGates -RunPerformanceGate -RunSecurityGate",
    "pilot:release-readiness": "powershell -ExecutionPolicy Bypass -File scripts/pilot/release-readiness.ps1 -RunQualityGates -RunPerformanceGate -RunSecurityGate",
    "pilot:rollback-drill": "powershell -ExecutionPolicy Bypass -File scripts/pilot/rollback-drill.ps1",
    "pilot:hypercare": "powershell -ExecutionPolicy Bypass -File scripts/pilot/hypercare-daily.ps1",
    "pilot:task:register": "powershell -ExecutionPolicy Bypass -File scripts/pilot/register-hypercare-task.ps1",
    "pilot:task:unregister": "powershell -ExecutionPolicy Bypass -File scripts/pilot/unregister-hypercare-task.ps1"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.18",
    "clsx": "^2.1.1",
    "lucide-react": "^0.574.0",
    "mongodb": "^7.1.0",
    "mongoose": "^9.2.2",
    "next": "16.1.6",
    "next-intl": "^4.8.3",
    "prisma": "^5.22.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.5.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
